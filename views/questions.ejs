<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head', { title: 'Questions' }) %>
</head>

<body class="bg-image">
    <main class="main d-flex">
        <h1 class="main__title text-center">Questions</h1>
        <% for (let i=0; i< questions.length; i++) { %>
            <div class="question">
                <h3 class="question__title">
                    <span><%= i + 1 %>&rpar; </span><%= questions[i].question %>
                </h3>
                <ol class="question__list">
                    <li class="question__answer">
                        <span>a&rpar; </span><%= questions[i].answers[0] %>
                    </li>
                    <li class="question__answer">
                        <span>b&rpar; </span><%= questions[i].answers[1] %>
                    </li>
                    <li class="question__answer">
                        <span>c&rpar; </span><%= questions[i].answers[2] %>
                    </li>
                    <li class="question__answer">
                        <span>d&rpar; </span><%= questions[i].answers[3] %>
                    </li>
                </ol>
            </div>
        <% } %>
        <%- include('partials/footer') %>
    </main>
</body>

</html>