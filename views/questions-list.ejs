<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head', { title: 'Question List' }) %>
    <script src="/js/scroll.js" defer></script>
</head>

<body class="bg-image">
    <%- include('partials/header') %>
    <main class="container main min-vh-100-within d-flex d-flex-col justify-content-center ">
        <h1 class="main__title text-center mt-2">Questions</h1>
        <ol class="question list-group">
        <% for (let i=0; i< questions.length; i++) { %>
            <li class="list-group-item">
                <span>
                    <%= i + 1 %>&rpar;&nbsp;
                </span>
                <p><%= questions[i].question %></p>
                <a href="/questions/question/<%= questions[i].id %>" class="list-group-button" title="Edit">
                    <%- include('components/edit-svg') %>
                </a>
                <form class="list-group-button" action="/questions/question/<%= questions[i].id %>?_method=DELETE" method="POST" title="Delete">
                    <button>
                        <%- include('components/delete-svg') %>
                    </button>
                </form>
            </li>
        <% } %>
        </ol>
        <%- include('partials/footer') %>
    </main>
</body>

</html>